<Window x:Class="Themis.RetentionManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Themis â€“ Retention Manager" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Retention Manager" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Datenaufbewahrung und -bereinigung" FontSize="12" Foreground="#BDC3C7" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1">
            <Grid Height="45">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0">
                    <ToggleButton x:Name="HamburgerToggle" Content="â˜°" Width="36" Height="30" 
                                  FontSize="18" Click="HamburgerToggle_Click"
                                  Background="Transparent" BorderThickness="0"/>
                    <Button Content="Aktualisieren" Command="{Binding RefreshCommand}" 
                            Style="{StaticResource ActionButtonStyle}" Background="#4CAF50" Foreground="White"/>
            <Button Content="Neue Policy" Command="{Binding CreatePolicyCommand}" 
                            Style="{StaticResource ActionButtonStyle}" Background="#2196F3" Foreground="White"/>
            <Button Content="Bereinigen" Command="{Binding CleanupCommand}" 
                            Style="{StaticResource ActionButtonStyle}" Background="#FF9800" Foreground="White"/>
            <Button Content="LÃ¶schen" Command="{Binding DeletePolicyCommand}"
                Style="{StaticResource ActionButtonStyle}" Background="#E74C3C" Foreground="White"/>
            <Button Content="Historie" Command="{Binding ShowHistoryCommand}"
                Style="{StaticResource ActionButtonStyle}"/>
            <Button Content="Stats" Command="{Binding ShowStatsCommand}"
                Style="{StaticResource ActionButtonStyle}"/>
                    <Separator Width="1" Margin="5,5" Background="#BDC3C7"/>
                    <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="10,0" Foreground="#34495E"/>
                </StackPanel>

                <Button Grid.Column="2" Content="Themis" FontSize="22" FontWeight="Bold" 
                        Foreground="#64B5F6" Background="Transparent" BorderThickness="0"
                        Margin="0,0,15,0" Cursor="Hand" Click="AboutButton_Click"/>
            </Grid>
        </Border>

        <!-- Content Area with Sidebar -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border x:Name="SidebarPanel" Grid.Column="0" Background="#F7F9FC" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!-- Actions Section -->
                        <TextBlock Text="Aktionen" FontWeight="Bold" FontSize="12" Foreground="#7F8C8D" Margin="5,10,5,5"/>
                        <Button Content="ðŸ“‹ Policies laden" Command="{Binding RefreshCommand}" 
                                HorizontalAlignment="Stretch" Margin="5" Padding="8"/>
                        <Button Content="âž• Policy erstellen" Command="{Binding CreatePolicyCommand}" 
                                HorizontalAlignment="Stretch" Margin="5" Padding="8"/>
                        <Button Content="ðŸ—‘ï¸ Bereinigung starten" Command="{Binding CleanupCommand}" 
                                HorizontalAlignment="Stretch" Margin="5" Padding="8" Background="#FFA726" Foreground="White"/>

                        <Separator Margin="5,10"/>

                        <!-- Filter Section -->
                        <TextBlock Text="Filter" FontWeight="Bold" FontSize="12" Foreground="#7F8C8D" Margin="5,10,5,5"/>
                        
                        <TextBlock Text="Policy-Status:" FontSize="11" Margin="5,5,5,2"/>
                        <ComboBox Margin="5" SelectedIndex="{Binding StatusFilterIndex}">
                            <ComboBoxItem Content="Alle"/>
                            <ComboBoxItem Content="Aktiv"/>
                            <ComboBoxItem Content="Inaktiv"/>
                            <ComboBoxItem Content="Abgelaufen"/>
                        </ComboBox>

                        <TextBlock Text="EntitÃ¤tstyp:" FontSize="11" Margin="5,10,5,2"/>
                        <ComboBox Margin="5" SelectedIndex="{Binding EntityTypeFilterIndex}">
                            <ComboBoxItem Content="Alle"/>
                            <ComboBoxItem Content="AuditLog"/>
                            <ComboBoxItem Content="Document"/>
                            <ComboBoxItem Content="Backup"/>
                            <ComboBoxItem Content="TempData"/>
                        </ComboBox>

                        <CheckBox Content="Nur Ã¼berfÃ¤llige Policies" Margin="5,10" IsChecked="{Binding ShowOverdueOnly}"/>

                        <Separator Margin="5,10"/>

                        <!-- Navigation Section -->
                        <TextBlock Text="Navigation" FontWeight="Bold" FontSize="12" Foreground="#7F8C8D" Margin="5,10,5,5"/>
                        <Button Content="ðŸ  Dashboard" HorizontalAlignment="Stretch" Margin="5" Padding="8"/>
                        <Button Content="âš™ï¸ Einstellungen" HorizontalAlignment="Stretch" Margin="5" Padding="8"/>
                        <Button Content="â“ Hilfe" HorizontalAlignment="Stretch" Margin="5" Padding="8" Click="AboutButton_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
            <GridSplitter x:Name="SidebarSplitter" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="#E0E0E0" ShowsPreview="False"/>

            <!-- Main Content -->
            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Bar -->
                <TextBox Grid.Row="0" Height="35" Margin="0,0,0,10" Padding="10,8" FontSize="13"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#BDC3C7"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="ðŸ” Suche nach Policy-Name, EntitÃ¤t oder Beschreibung..." 
                                                               Foreground="#95A5A6" Margin="5,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding Policies}" AutoGenerateColumns="False"
                          IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False"
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                          AlternatingRowBackground="#F9F9F9" Background="White"
                          BorderBrush="#BDC3C7" BorderThickness="1"
                          SelectedItem="{Binding SelectedPolicy, Mode=TwoWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Policy-ID" Binding="{Binding PolicyId}" Width="120"/>
                        <DataGridTextColumn Header="Policy-Name" Binding="{Binding PolicyName}" Width="200"/>
                        <DataGridTextColumn Header="EntitÃ¤tstyp" Binding="{Binding EntityType}" Width="120"/>
                        <DataGridTextColumn Header="Aufbewahrungsfrist" Binding="{Binding RetentionPeriod}" Width="150"/>
                        <DataGridTextColumn Header="Erstellt am" Binding="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="140"/>
                        <DataGridTextColumn Header="NÃ¤chste Bereinigung" Binding="{Binding NextCleanup, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="160"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="Aktiv">
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="Inaktiv">
                                            <Setter Property="Foreground" Value="#9E9E9E"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="Abgelaufen">
                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Betroffene DatensÃ¤tze" Binding="{Binding AffectedRecords}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495E" BorderBrush="#2C3E50" BorderThickness="0,1,0,0" Height="30">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Foreground="White" VerticalAlignment="Center">
                        <Run Text="Policies: "/>
                        <Run Text="{Binding Policies.Count, Mode=OneWay}" FontWeight="Bold"/>
                        <Run Text=" | ÃœberfÃ¤llig: "/>
                        <Run Text="{Binding OverdueCount, Mode=OneWay}" FontWeight="Bold" Foreground="#E74C3C"/>
                    </TextBlock>
                </StackPanel>

                <ProgressBar Grid.Column="1" Width="150" Height="18" 
                             IsIndeterminate="True" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
