<Window x:Class="Themis.AuditLogViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ThemisDB - Audit Log Viewer" 
        Height="700" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <StackPanel>
                <TextBlock Text="Audit Log Viewer" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="View and analyze database audit logs" 
                          FontSize="12" Foreground="#BDC3C7" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <ToggleButton x:Name="HamburgerToggle" Content="â˜°" Width="36" Height="30" Margin="0,0,10,0"
                                  ToolTip="Sidebar ein/ausblenden" Click="HamburgerToggle_Click"/>
                    <Button Content="Laden" Width="100" Height="30" Margin="0,0,10,0"
                            Command="{Binding LoadCommand}" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                    <Button Content="CSV Export" Width="100" Height="30" Margin="0,0,10,0"
                            Command="{Binding ExportCommand}"/>
                    <Button Content="Filter lÃ¶schen" Width="100" Height="30" Margin="0,0,10,0"
                            Command="{Binding ClearFiltersCommand}"/>
                    <Rectangle Width="1" Fill="#BDC3C7" Margin="10,0"/>
                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0">
                        <Run Text="Status: "/>
                        <Run Text="{Binding StatusMessage}" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="2" Content="Themis" Click="AboutButton_Click"
                        Background="Transparent" BorderBrush="Transparent"
                        Foreground="#64B5F6" FontSize="22" FontWeight="Bold"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        ToolTip="Ãœber Themis" Padding="10,0"/>
            </Grid>
        </Border>

        <!-- Main Content: Sidebar | Content -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border x:Name="SidebarPanel" Grid.Column="0" Background="#F7F9FC" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="Filter" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Von:" Margin="0,5,0,2"/>
                    <DatePicker SelectedDate="{Binding StartDate}" Margin="0,0,0,5"/>
                    
                    <TextBlock Text="Bis:" Margin="0,5,0,2"/>
                    <DatePicker SelectedDate="{Binding EndDate}" Margin="0,0,0,5"/>
                    
                    <TextBlock Text="Benutzer:" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding UserFilter, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
                    
                    <TextBlock Text="Aktion:" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding ActionFilter, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
                    
                    <TextBlock Text="EntitÃ¤t:" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding EntityTypeFilter, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
                    
                    <CheckBox Content="Nur erfolgreiche Aktionen" IsChecked="{Binding SuccessOnlyFilter}" Margin="0,5,0,5"/>

                    <Separator Margin="0,10,0,10"/>
                    <TextBlock Text="Navigation" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Content="Audit Logs"/>
                    <Button Content="Einstellungen"/>
                    <Button Content="Hilfe" Click="AboutButton_Click"/>
                </StackPanel>
            </Border>

            <GridSplitter x:Name="SidebarSplitter" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#BDC3C7"/>

            <!-- Content -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search -->
                <TextBox Grid.Row="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,0,0,5" Padding="5"
                        ToolTip="Durchsucht alle Spalten nach dem eingegebenen Text">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="ðŸ” Suche in allen Spalten..." Foreground="Gray" Margin="5,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Data Grid -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding AuditLogs}" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Extended"
                          AlternatingRowBackground="#F5F5F5"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          CanUserSortColumns="True"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" SortMemberPath="Id"/>
                        <DataGridTextColumn Header="Zeitstempel" Binding="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Width="150" SortMemberPath="Timestamp"/>
                        <DataGridTextColumn Header="Benutzer" Binding="{Binding User}" Width="120" SortMemberPath="User"/>
                        <DataGridTextColumn Header="Aktion" Binding="{Binding Action}" Width="150" SortMemberPath="Action"/>
                        <DataGridTextColumn Header="EntitÃ¤tstyp" Binding="{Binding EntityType}" Width="120" SortMemberPath="EntityType"/>
                        <DataGridTextColumn Header="EntitÃ¤ts-ID" Binding="{Binding EntityId}" Width="200" SortMemberPath="EntityId"/>
                        <DataGridTextColumn Header="Alter Wert" Binding="{Binding OldValue}" Width="150" SortMemberPath="OldValue"/>
                        <DataGridTextColumn Header="Neuer Wert" Binding="{Binding NewValue}" Width="150" SortMemberPath="NewValue"/>
                        <DataGridCheckBoxColumn Header="Erfolg" Binding="{Binding Success}" Width="70" SortMemberPath="Success"/>
                        <DataGridTextColumn Header="IP-Adresse" Binding="{Binding IpAddress}" Width="120"/>
                        <DataGridTextColumn Header="Fehler" Binding="{Binding ErrorMessage}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495E" BorderBrush="#2C3E50" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Foreground="White" VerticalAlignment="Center">
                    <Run Text="EintrÃ¤ge: "/>
                    <Run Text="{Binding AuditLogs.Count, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="â—€ Vorherige" Command="{Binding PreviousPageCommand}" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding CurrentPage, StringFormat=Seite {0}}" 
                               VerticalAlignment="Center" 
                               Foreground="White"
                               Margin="10,0"/>
                    <Button Content="NÃ¤chste â–¶" Command="{Binding NextPageCommand}" Margin="5,0,0,0"/>
                    <ProgressBar Width="100" Height="15" IsIndeterminate="True" Margin="10,0,0,0"
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>