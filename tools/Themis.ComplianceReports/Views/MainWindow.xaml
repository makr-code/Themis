<Window x:Class="Themis.ComplianceReports.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Themis â€“ Compliance Reports" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Compliance Reports" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="DSGVO, SOX, HIPAA Report-Generierung" FontSize="12" Foreground="#BDC3C7" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1">
            <Grid Height="45">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0">
                    <ToggleButton x:Name="HamburgerToggle" Content="â˜°" Width="36" Height="30" 
                                  FontSize="18" Click="HamburgerToggle_Click"
                                  Background="Transparent" BorderThickness="0"/>
                    <Button Content="Aktualisieren" Command="{Binding RefreshCommand}" 
                            Style="{StaticResource ActionButtonStyle}" Background="#4CAF50" Foreground="White"/>
                    <Button Content="Report generieren" Command="{Binding GenerateReportCommand}" 
                            Style="{StaticResource ActionButtonStyle}" Background="#2196F3" Foreground="White"/>
                    <Button Content="Export PDF" Command="{Binding ExportPdfCommand}" 
                            Style="{StaticResource ActionButtonStyle}" Background="#FF5722" Foreground="White"/>
                    <Button Content="Export Excel" Command="{Binding ExportExcelCommand}" 
                            Style="{StaticResource ActionButtonStyle}" Background="#4CAF50" Foreground="White"/>
                    <Separator Width="1" Margin="5,5" Background="#BDC3C7"/>
                    <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="10,0" Foreground="#34495E"/>
                </StackPanel>

                <Button Grid.Column="2" Content="Themis" FontSize="22" FontWeight="Bold" 
                        Foreground="#64B5F6" Background="Transparent" BorderThickness="0"
                        Margin="0,0,15,0" Cursor="Hand" Click="AboutButton_Click"/>
            </Grid>
        </Border>

        <!-- Content Area with Sidebar -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border x:Name="SidebarPanel" Grid.Column="0" Background="#F7F9FC" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!-- Report Type Selection -->
                        <TextBlock Text="Report-Typ" FontWeight="Bold" FontSize="12" Foreground="#7F8C8D" Margin="5,10,5,5"/>
                        <ComboBox Margin="5" SelectedIndex="{Binding ReportTypeIndex}">
                            <ComboBoxItem Content="DSGVO"/>
                            <ComboBoxItem Content="SOX"/>
                            <ComboBoxItem Content="HIPAA"/>
                            <ComboBoxItem Content="ISO 27001"/>
                            <ComboBoxItem Content="PCI-DSS"/>
                        </ComboBox>

                        <Separator Margin="5,10"/>

                        <!-- Actions Section -->
                        <TextBlock Text="Aktionen" FontWeight="Bold" FontSize="12" Foreground="#7F8C8D" Margin="5,10,5,5"/>
                        <Button Content="ðŸ“Š Report erstellen" Command="{Binding GenerateReportCommand}" 
                                HorizontalAlignment="Stretch" Margin="5" Padding="8" Background="#2196F3" Foreground="White"/>
                        <Button Content="ðŸ“„ Als PDF speichern" Command="{Binding ExportPdfCommand}" 
                                HorizontalAlignment="Stretch" Margin="5" Padding="8" Background="#FF5722" Foreground="White"/>
                        <Button Content="ðŸ“Š Als Excel exportieren" Command="{Binding ExportExcelCommand}" 
                                HorizontalAlignment="Stretch" Margin="5" Padding="8" Background="#4CAF50" Foreground="White"/>
                        <Button Content="ðŸ“‹ Als CSV exportieren" Command="{Binding ExportCsvCommand}" 
                                HorizontalAlignment="Stretch" Margin="5" Padding="8"/>

                        <Separator Margin="5,10"/>

                        <!-- Filter Section -->
                        <TextBlock Text="Zeitraum" FontWeight="Bold" FontSize="12" Foreground="#7F8C8D" Margin="5,10,5,5"/>
                        
                        <TextBlock Text="Von:" FontSize="11" Margin="5,5,5,2"/>
                        <DatePicker Margin="5" SelectedDate="{Binding StartDate}"/>

                        <TextBlock Text="Bis:" FontSize="11" Margin="5,10,5,2"/>
                        <DatePicker Margin="5" SelectedDate="{Binding EndDate}"/>

                        <Separator Margin="5,10"/>

                        <!-- Template Section -->
                        <TextBlock Text="Report-Template" FontWeight="Bold" FontSize="12" Foreground="#7F8C8D" Margin="5,10,5,5"/>
                        <ComboBox Margin="5" SelectedIndex="{Binding TemplateIndex}">
                            <ComboBoxItem Content="Standard"/>
                            <ComboBoxItem Content="Detailliert"/>
                            <ComboBoxItem Content="Zusammenfassung"/>
                            <ComboBoxItem Content="Executive Summary"/>
                        </ComboBox>

                        <CheckBox Content="Diagramme einbeziehen" Margin="5,10" IsChecked="{Binding IncludeCharts}"/>
                        <CheckBox Content="Technische Details" Margin="5,5" IsChecked="{Binding IncludeTechnicalDetails}"/>

                        <Separator Margin="5,10"/>

                        <!-- Navigation Section -->
                        <TextBlock Text="Navigation" FontWeight="Bold" FontSize="12" Foreground="#7F8C8D" Margin="5,10,5,5"/>
                        <Button Content="ðŸ  Dashboard" HorizontalAlignment="Stretch" Margin="5" Padding="8"/>
                        <Button Content="âš™ï¸ Einstellungen" HorizontalAlignment="Stretch" Margin="5" Padding="8"/>
                        <Button Content="â“ Hilfe" HorizontalAlignment="Stretch" Margin="5" Padding="8" Click="AboutButton_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Splitter -->
            <GridSplitter x:Name="SidebarSplitter" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="#E0E0E0" ShowsPreview="False"/>

            <!-- Main Content -->
            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Bar -->
                <TextBox Grid.Row="0" Height="35" Margin="0,0,0,10" Padding="10,8" FontSize="13"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#BDC3C7"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="ðŸ” Suche nach Report-ID, Typ oder Ersteller..." 
                                                               Foreground="#95A5A6" Margin="5,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding Reports}" AutoGenerateColumns="False"
                          IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False"
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                          AlternatingRowBackground="#F9F9F9" Background="White"
                          BorderBrush="#BDC3C7" BorderThickness="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Report-ID" Binding="{Binding ReportId}" Width="150"/>
                        <DataGridTextColumn Header="Report-Typ" Binding="{Binding ReportType}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="DSGVO">
                                            <Setter Property="Foreground" Value="#2196F3"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="SOX">
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="HIPAA">
                                            <Setter Property="Foreground" Value="#FF9800"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="ISO 27001">
                                            <Setter Property="Foreground" Value="#9C27B0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Erstellt am" Binding="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="140"/>
                        <DataGridTextColumn Header="Ersteller" Binding="{Binding CreatedBy}" Width="150"/>
                        <DataGridTextColumn Header="Zeitraum Von" Binding="{Binding PeriodStart, StringFormat='{}{0:dd.MM.yyyy}'}" Width="130"/>
                        <DataGridTextColumn Header="Zeitraum Bis" Binding="{Binding PeriodEnd, StringFormat='{}{0:dd.MM.yyyy}'}" Width="130"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="Abgeschlossen">
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="In Bearbeitung">
                                            <Setter Property="Foreground" Value="#FF9800"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="Fehler">
                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="DatensÃ¤tze" Binding="{Binding RecordCount}" Width="100"/>
                        <DataGridTextColumn Header="Hinweise" Binding="{Binding Notes}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495E" BorderBrush="#2C3E50" BorderThickness="0,1,0,0" Height="30">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Foreground="White" VerticalAlignment="Center">
                        <Run Text="Reports: "/>
                        <Run Text="{Binding Reports.Count, Mode=OneWay}" FontWeight="Bold"/>
                        <Run Text=" | Abgeschlossen: "/>
                        <Run Text="{Binding CompletedCount, Mode=OneWay}" FontWeight="Bold" Foreground="#4CAF50"/>
                    </TextBlock>
                </StackPanel>

                <ProgressBar Grid.Column="1" Width="150" Height="18" 
                             IsIndeterminate="True" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
