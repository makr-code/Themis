<Window x:Class="Themis.ClassificationDashboard.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Themis – Classification Dashboard" 
        Height="260" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F7F9FC">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Themis – Classification Dashboard" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
        <TextBlock Grid.Row="1" Text="Version 1.0.0" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="2" Text="Build: net8.0-windows" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="3" Text="© 2025 ThemisDB. Alle Rechte vorbehalten." FontSize="11" Foreground="#95A5A6" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="4" TextWrapping="Wrap" FontSize="12" Foreground="#34495E" Margin="0,0,0,20">
            Überwacht Klassifizierungslevel vertraulicher Daten (PUBLIC, INTERNAL, CONFIDENTIAL, RESTRICTED). Zeigt Verschlüsselungsstatus, identifiziert Compliance-Gaps und ermöglicht Klassifizierungsaktualisierungen.
        </TextBlock>

        <Button Grid.Row="5" Content="OK" Width="80" Height="30" HorizontalAlignment="Right"
                Background="#64B5F6" Foreground="White" BorderThickness="0"
                FontWeight="SemiBold" Click="Ok_Click"/>
    </Grid>
</Window>
