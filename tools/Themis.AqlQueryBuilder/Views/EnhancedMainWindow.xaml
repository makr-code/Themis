<Window x:Class="Themis.AqlQueryBuilder.Views.EnhancedMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Themis.AqlQueryBuilder"
        xmlns:vm="clr-namespace:Themis.AqlQueryBuilder.ViewModels"
        xmlns:models="clr-namespace:Themis.AqlQueryBuilder.Models"
        mc:Ignorable="d"
        Title="Themis AQL Multi-Model Query Builder" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Data type icons converter -->
        <local:CollectionTypeToIconConverter x:Key="CollectionTypeToIcon"/>
        <local:FieldTypeToColorConverter x:Key="FieldTypeToColor"/>
        <local:BoolToIntConverter x:Key="BoolToIntConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“Š Themis AQL Query Builder" 
                          Foreground="White" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          VerticalAlignment="Center"/>
                
                <Separator Width="20" Background="Transparent"/>
                
                <TextBlock Text="Query Type:" 
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          Margin="0,0,5,0"/>
                <ComboBox SelectedIndex="0" Width="120" VerticalAlignment="Center">
                    <ComboBoxItem Content="ðŸ“Š Relational"/>
                    <ComboBoxItem Content="ðŸ•¸ï¸ Graph" IsEnabled="False"/>
                    <ComboBoxItem Content="ðŸ”¢ Vector" IsEnabled="False"/>
                    <ComboBoxItem Content="ðŸ“ Geo" IsEnabled="False"/>
                    <ComboBoxItem Content="ðŸ”€ Hybrid" IsEnabled="False"/>
                </ComboBox>
                
                <Separator Width="20" Background="Transparent"/>
                
                <Button Content="New Query" 
                        Command="{Binding ClearQueryCommand}"
                        Margin="5,0" 
                        Padding="10,5"/>
                <Button Content="Sample Query" 
                        Command="{Binding AddSampleQueryCommand}"
                        Margin="5,0" 
                        Padding="10,5"/>
                <Button Content="â–¶ Execute" 
                        Command="{Binding ExecuteQueryCommand}"
                        Margin="5,0" 
                        Padding="15,5"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="Bold"/>
                <Button Content="ðŸ“‹ Copy" 
                        Command="{Binding CopyQueryCommand}"
                        Margin="5,0" 
                        Padding="10,5"/>
                
                <Separator Width="20" Background="Transparent"/>
                
                <TextBlock Text="Server:" 
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          Margin="0,0,5,0"/>
                <TextBox Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200" 
                         VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Schema Explorer -->
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,1,0">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="#F0F0F0" Padding="10,5">
                        <TextBlock Text="ðŸ“š Schema Explorer" FontWeight="Bold" FontSize="14"/>
                    </Border>
                    
                    <TreeView ItemsSource="{Binding SchemaCollections}" 
                             BorderThickness="0"
                             Padding="5">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Fields}">
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="{Binding Type, Converter={StaticResource CollectionTypeToIcon}}" 
                                              FontSize="16" 
                                              Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Name}" 
                                              FontWeight="Bold"/>
                                    <TextBlock Text="{Binding EstimatedDocumentCount, StringFormat=' ({0} docs)'}" 
                                              Foreground="Gray" 
                                              FontSize="10"
                                              VerticalAlignment="Center"
                                              Margin="5,0,0,0"/>
                                </StackPanel>
                                
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,1">
                                            <Ellipse Width="8" Height="8" 
                                                    Fill="{Binding DataType, Converter={StaticResource FieldTypeToColor}}"
                                                    Margin="0,0,5,0"
                                                    VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Name}"/>
                                            <TextBlock Text="{Binding DataType, StringFormat=' : {0}'}" 
                                                      Foreground="Gray" 
                                                      FontSize="10"
                                                      Margin="5,0,0,0"/>
                                            <TextBlock Text=" ðŸ”" 
                                                      ToolTip="Indexed" 
                                                      Visibility="{Binding IsIndexed, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </DockPanel>
            </Border>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray"/>

            <!-- Center Panel: Query Builder (existing content) -->
            <TabControl Grid.Column="2" Margin="5">
                <TabItem Header="ðŸ“Š Relational Query">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <!-- Your existing query builder content goes here -->
                        <TextBlock Text="Relational query builder (existing implementation)" 
                                  Margin="20"
                                  Foreground="Gray"/>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="ðŸ•¸ï¸ Graph Query" IsEnabled="False">
                    <StackPanel Margin="20">
                        <TextBlock Text="Graph Query Builder" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Coming soon: Visual graph pattern builder" Foreground="Gray"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="ðŸ”¢ Vector Search" IsEnabled="False">
                    <StackPanel Margin="20">
                        <TextBlock Text="Vector Similarity Search" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Coming soon: Vector similarity query builder" Foreground="Gray"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="ðŸ“ Geo Query" IsEnabled="False">
                    <StackPanel Margin="20">
                        <TextBlock Text="Geospatial Query Builder" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Coming soon: Map-based spatial query builder" Foreground="Gray"/>
                    </StackPanel>
                </TabItem>
            </TabControl>

            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" Background="LightGray"/>

            <!-- Right Panel: Query Preview & Results -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Generated Query Preview -->
                <GroupBox Grid.Row="0" Header="ðŸ“ Generated AQL Query" Margin="5">
                    <TextBox Text="{Binding GeneratedQuery, Mode=OneWay}" 
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            FontFamily="Consolas"
                            FontSize="12"
                            VerticalScrollBarVisibility="Auto"
                            Background="#1E1E1E"
                            Foreground="#D4D4D4"
                            Padding="10"/>
                </GroupBox>

                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Background="LightGray"/>

                <!-- Query Results -->
                <GroupBox Grid.Row="2" Header="ðŸ“Š Query Results" Margin="5">
                    <TextBox Text="{Binding QueryResult, Mode=OneWay}" 
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            FontFamily="Consolas"
                            FontSize="11"
                            VerticalScrollBarVisibility="Auto"
                            Background="#1E1E1E"
                            Foreground="#D4D4D4"
                            Padding="10"/>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Ready" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text=" | " Foreground="White" Margin="10,0"/>
                    <TextBlock Text="{Binding SchemaCollections.Count, StringFormat='{0} collections'}" 
                              Foreground="White" 
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" 
                          Text="{Binding IsExecuting, StringFormat='Executing: {0}'}" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          Margin="10,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
