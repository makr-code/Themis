                            <TextBlock Text="Distance:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                            <TextBox Text="{Binding GeoQuery.DistanceValue, UpdateSourceTrigger=PropertyChanged}" 
                                    Grid.Row="0" Grid.Column="1" Margin="0,5"
                                    ToolTip="Search radius distance"/>

                            <TextBlock Text="Unit:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
                            <ComboBox ItemsSource="{Binding DistanceUnits}" 
                                     SelectedItem="{Binding GeoQuery.DistanceUnit, Converter={StaticResource EnumToStringConverter}}"
                                     Grid.Row="1" Grid.Column="1" Margin="0,5"
                                     ToolTip="Distance unit"/>
                        </Grid>
                    </GroupBox>

                    <!-- Hybrid Search Filters -->
                    <GroupBox Header="ðŸ” Hybrid Search (Metadata Filters)" Margin="0,0,0,10" 
                             BorderBrush="#FF9800" BorderThickness="2" Padding="10">
                        <StackPanel>
                            <CheckBox Content="Enable Hybrid Search" 
                                     IsChecked="{Binding GeoQuery.HybridSearch}"
                                     Margin="0,0,0,10"
                                     ToolTip="Combine spatial search with metadata filters"/>

                            <Button Content="+ Add Filter" 
                                   Command="{Binding AddGeoFilterCommand}" 
                                   Margin="0,0,0,10"
                                   Padding="10,5"
                                   Background="#FF9800"
                                   Foreground="White"/>

                            <ItemsControl ItemsSource="{Binding GeoMetadataFilters}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#FF9800" BorderThickness="1" Padding="8" Margin="0,5" CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBox Text="{Binding Field, UpdateSourceTrigger=PropertyChanged}" 
                                                        Grid.Column="0" Margin="0,0,5,0" 
                                                        ToolTip="Field name"/>
                                                <ComboBox Grid.Column="1" Margin="0,0,5,0" Width="60"
                                                         SelectedItem="{Binding Operator}"
                                                         ToolTip="Comparison operator">
                                                    <ComboBoxItem Content="=="/>
                                                    <ComboBoxItem Content="!="/>
                                                    <ComboBoxItem Content="&lt;"/>
                                                    <ComboBoxItem Content="&gt;"/>
                                                    <ComboBoxItem Content="&lt;="/>
                                                    <ComboBoxItem Content="&gt;="/>
                                                </ComboBox>
                                                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                                        Grid.Column="2" Margin="0,0,5,0"
                                                        ToolTip="Filter value"/>
                                                <Button Content="âœ•" 
                                                       Command="{Binding DataContext.RemoveGeoFilterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"
                                                       Grid.Column="3"
                                                       Background="#F44336"
                                                       Foreground="White"
                                                       Padding="8,0"
                                                       ToolTip="Remove filter"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </GroupBox>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Button Content="ðŸ“ Sample Point Search" 
                               Command="{Binding AddSamplePointSearchCommand}"
                               Margin="5" 
                               Padding="15,8"
                               Background="#4CAF50"
                               Foreground="White"
                               ToolTip="Load example: Find restaurants within 5km of Berlin"/>
                        <Button Content="ðŸ—ºï¸ Sample Polygon Search" 
                               Command="{Binding AddSamplePolygonSearchCommand}"
                               Margin="5" 
                               Padding="15,8"
                               Background="#2196F3"
                               Foreground="White"
                               ToolTip="Load example: Find stores in a district"/>
                        <Button Content="ðŸ”„ Generate AQL" 
                               Command="{Binding UpdateGeoAqlCommand}"
                               Margin="5" 
                               Padding="15,8"
                               Background="#FF9800"
                               Foreground="White"/>
                        <Button Content="ðŸ—‘ï¸ Clear" 
                               Command="{Binding ClearQueryCommand}"
                               Margin="5" 
                               Padding="15,8"/>
                    </StackPanel>

                    <!-- Generated AQL Preview -->
                    <GroupBox Header="ðŸ“œ Generated AQL" Margin="0,15,0,0" Padding="10">
                        <TextBox Text="{Binding GeoAql, Mode=OneWay}" 
                                Height="180" 
                                TextWrapping="Wrap" 
                                AcceptsReturn="True" 
                                IsReadOnly="True"
                                FontFamily="Consolas"
                                Background="#F5F5F5"
                                VerticalScrollBarVisibility="Auto"/>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>

            <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch" Background="LightGray"/>

            <!-- Right Panel: Query Preview & Results -->
            <Grid Grid.Column="4" Background="#FAFAFA">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Generated Query -->
                <GroupBox Grid.Row="0" Header="ðŸ“ Generated AQL Query" Margin="5" BorderBrush="#424242" BorderThickness="1">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12"/>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    <TextBox Text="{Binding GeneratedQuery, Mode=OneWay}" 
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            FontFamily="Consolas"
                            FontSize="12"
                            VerticalScrollBarVisibility="Auto"
                            Background="#1E1E1E"
                            Foreground="#D4D4D4"
                            Padding="10"
                            BorderThickness="0"/>
                </GroupBox>

                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Background="LightGray"/>

                <!-- Query Results -->
                <GroupBox Grid.Row="2" Header="ðŸ“Š Query Results" Margin="5" BorderBrush="#424242" BorderThickness="1">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12"/>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    <TextBox Text="{Binding QueryResult, Mode=OneWay}" 
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            FontFamily="Consolas"
                            FontSize="11"
                            VerticalScrollBarVisibility="Auto"
                            Background="#1E1E1E"
                            Foreground="#D4D4D4"
                            Padding="10"
                            BorderThickness="0"/>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#1976D2" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="âœ… Phase 4 Complete" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock Text="|" Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding SchemaCollections.Count, StringFormat='{0} collections'}" 
                              Foreground="White" 
                              VerticalAlignment="Center"/>
                    <TextBlock Text="|" Foreground="White" Margin="10,0"/>
                    <TextBlock Text="{Binding ForClauses.Count, StringFormat='Query: {0} FOR'}" 
                              Foreground="White" 
                              VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding FilterClauses.Count, StringFormat=', {0} FILTER'}" 
                              Foreground="White" 
                              VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SortClauses.Count, StringFormat=', {0} SORT'}" 
                              Foreground="White" 
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding IsExecuting, StringFormat='Executing: {0}'}" 
                              Foreground="White" 
                              VerticalAlignment="Center"
                              Margin="10,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
