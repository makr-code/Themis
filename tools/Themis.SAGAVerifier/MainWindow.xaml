<Window x:Class="Themis.SAGAVerifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Themis.SAGAVerifier"
        xmlns:converters="clr-namespace:Themis.SAGAVerifier.Converters"
        mc:Ignorable="d"
        Title="Themis SAGA Batch Verifier" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:CountToBoolConverter x:Key="CountToBoolConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <StackPanel>
                <TextBlock Text="SAGA Batch Verifier" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Verify cryptographic signatures of SAGA transaction batches" 
                          FontSize="12" Foreground="#BDC3C7" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <ToggleButton x:Name="HamburgerToggle" Content="☰" Width="36" Height="30" Margin="0,0,10,0"
                                  ToolTip="Sidebar ein/ausblenden" Click="HamburgerToggle_Click"/>
                    <Button Content="Refresh" Width="100" Height="30" Margin="0,0,10,0"
                            Command="{Binding LoadBatchesCommand}"/>
                    <Button Content="Verify Selected" Width="120" Height="30" Margin="0,0,10,0"
                            Command="{Binding VerifyBatchCommand}"
                            IsEnabled="{Binding SelectedBatch, Converter={StaticResource NullToBoolConverter}}"/>
                    <Button Content="Flush Current" Width="120" Height="30" Margin="0,0,10,0"
                            Command="{Binding FlushBatchCommand}"/>
                    <Button Content="Export Steps" Width="120" Height="30" Margin="0,0,10,0"
                            Command="{Binding ExportStepsCommand}"
                            IsEnabled="{Binding Steps.Count, Mode=OneWay, Converter={StaticResource CountToBoolConverter}}"/>
                    <Rectangle Width="1" Fill="#BDC3C7" Margin="10,0"/>
                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0">
                        <Run Text="Status: "/>
                        <Run Text="{Binding StatusMessage}" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="2" Content="Themis" Click="AboutButton_Click"
                        Background="Transparent" BorderBrush="Transparent"
                        Foreground="#64B5F6" FontSize="22" FontWeight="Bold"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        ToolTip="Über Themis" Padding="10,0"/>
            </Grid>
        </Border>

        <!-- Main Content: Sidebar | Content -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar / Hamburger Menu -->
            <Border x:Name="SidebarPanel" Grid.Column="0" Background="#F7F9FC" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="Aktionen" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Content="Refresh" Command="{Binding LoadBatchesCommand}" Margin="0,0,0,5"/>
                    <Button Content="Verify Selected" Command="{Binding VerifyBatchCommand}"
                            IsEnabled="{Binding SelectedBatch, Converter={StaticResource NullToBoolConverter}}" Margin="0,0,0,5"/>
                    <Button Content="Flush Current" Command="{Binding FlushBatchCommand}" Margin="0,0,0,5"/>
                    <Button Content="Export Steps" Command="{Binding ExportStepsCommand}"
                            IsEnabled="{Binding Steps.Count, Mode=OneWay, Converter={StaticResource CountToBoolConverter}}" Margin="0,0,0,5"/>

                    <Separator Margin="0,10,0,10"/>
                    <TextBlock Text="Navigation" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Content="Batches"/>
                    <Button Content="Einstellungen"/>
                    <Button Content="Hilfe" Click="AboutButton_Click"/>
                </StackPanel>
            </Border>

            <GridSplitter x:Name="SidebarSplitter" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#BDC3C7"/>

            <!-- Content Wrapper -->
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Batch List -->
                <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="SAGA Batches" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Search Box for Batches -->
                <TextBox Grid.Row="1" Text="{Binding BatchSearchText, UpdateSourceTrigger=PropertyChanged}"
                        Padding="5" Margin="0,0,0,5"
                        ToolTip="Search batches by ID, hash, or signature">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="🔍 Search batches..." Foreground="Gray" Margin="5,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <DataGrid Grid.Row="2" ItemsSource="{Binding Batches}" 
                         SelectedItem="{Binding SelectedBatch, Mode=TwoWay}"
                         AutoGenerateColumns="False" IsReadOnly="True"
                         SelectionMode="Single" CanUserReorderColumns="True"
                         GridLinesVisibility="Horizontal" AlternatingRowBackground="#F5F5F5"
                         CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Batch ID" Binding="{Binding BatchIdShort}" Width="120" SortMemberPath="BatchId"/>
                        <DataGridTextColumn Header="Timestamp" Binding="{Binding TimestampFormatted}" Width="140" SortMemberPath="Timestamp"/>
                        <DataGridTextColumn Header="Entries" Binding="{Binding EntryCount}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
                </Grid>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#BDC3C7"/>

                <!-- Batch Detail -->
                <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Batch Info -->
                <GroupBox Grid.Row="0" Header="Batch Information" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Batch ID:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding BatchDetail.BatchId}" Margin="0,0,0,5" TextWrapping="Wrap"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Hash:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding BatchDetail.Hash}" Margin="0,0,0,5" 
                                  FontFamily="Consolas" FontSize="10" TextWrapping="Wrap"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Signature:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding BatchDetail.Signature}" Margin="0,0,0,5" 
                                  FontFamily="Consolas" FontSize="10" TextWrapping="Wrap"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Verification:" FontWeight="Bold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding VerificationResult.DetailedStatus}" 
                                  Foreground="{Binding VerificationResult.Verified, Converter={StaticResource BoolToColorConverter}}"/>
                    </Grid>
                </GroupBox>

                <!-- SAGA Steps -->
                <TextBlock Grid.Row="1" Text="SAGA Steps" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>

                <!-- Search Box for Steps -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                    <TextBox Text="{Binding StepSearchText, UpdateSourceTrigger=PropertyChanged}"
                            Width="200" Padding="5"
                            ToolTip="Search steps by SAGA ID, step name, status, correlation ID">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="🔍 Search steps..." Foreground="Gray" Margin="5,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <DataGrid Grid.Row="2" ItemsSource="{Binding Steps}" 
                         AutoGenerateColumns="False" IsReadOnly="True"
                         GridLinesVisibility="Horizontal" AlternatingRowBackground="#F5F5F5"
                         CanUserSortColumns="True" CanUserReorderColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding TimestampFormatted}" Width="80" SortMemberPath="Timestamp"/>
                        <DataGridTextColumn Header="SAGA ID" Binding="{Binding SagaId}" Width="120" SortMemberPath="SagaId"/>
                        <DataGridTextColumn Header="Step" Binding="{Binding StepName}" Width="150" SortMemberPath="StepName"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" SortMemberPath="Status"/>
                        <DataGridTextColumn Header="Correlation ID" Binding="{Binding CorrelationId}" Width="*" SortMemberPath="CorrelationId"/>
                    </DataGrid.Columns>
                </DataGrid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495E" BorderBrush="#2C3E50" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Foreground="White">
                    <Run Text="Batches: "/>
                    <Run Text="{Binding Batches.Count, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text="  |  Steps: "/>
                    <Run Text="{Binding Steps.Count, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="⚠ Error: " Foreground="#E74C3C" FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#E74C3C" MaxWidth="400" TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <ProgressBar Grid.Column="1" Width="200" Height="15" IsIndeterminate="True" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
