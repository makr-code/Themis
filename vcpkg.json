{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "themis",
  "version": "0.1.0",
  "description": "Themis Multi-Model Database System",
  "homepage": "https://github.com/makr-code/VCC",
  "license": "MIT",
  "dependencies": [
    { "name": "rocksdb", "features": ["lz4", "zstd"] },
    { "name": "simdjson" },
    { "name": "tbb" },
    { "name": "arrow", "features": ["parquet", "compute"] },
    { "name": "hnswlib" },
    { "name": "gtest" },
    { "name": "benchmark" },
    { "name": "boost-asio" },
    { "name": "boost-beast" },
    { "name": "spdlog" },
    { "name": "nlohmann-json" }
  ],
  "features": {
    "gpu": {
      "description": "Enable GPU acceleration for vector search",
      "dependencies": [
        "faiss"
      ]
    }
  }
}
